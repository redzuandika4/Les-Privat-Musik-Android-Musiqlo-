<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Data Biaya"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"/>

        <EditText
            android:id="@+id/etDanaMengendap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Dana Mengendap"
            android:inputType="numberDecimal"/>

        <EditText
            android:id="@+id/etMinimumPenarikan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Minimum Penarikan"
            android:inputType="numberDecimal"/>

        <EditText
            android:id="@+id/etBiayaOperasional"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Biaya Operasional"
            android:inputType="numberDecimal"/>

    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>